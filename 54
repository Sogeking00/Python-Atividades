from datetime import date
ano = date.today().year
men = 0
mai = 0
for c in range(0,7):
    c += 1
    nasc = int(input(f'Digite a data de nascimento da {c} pessoa: '))
    ida = ano - nasc 
    if ida >= 21:
        mai += 1
    elif ida < 21:
        men += 1
print(f'Das 7 pessoas {mai} são maiores de idade e {men} são menores')
