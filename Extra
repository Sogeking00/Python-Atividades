print('-'*10, end = ' ')
print('Registro', end = ' ')
print('-'*10)
email_log = str(input('Digite um email para ser registrado: '))
senha_log = str(input('Digite uma senha para ser registrada: '))
print('Registro bem sucedido!')
print('-'*10, end = ' ')
print('Login', end = ' ')
print('-'*10)
email_tent = str(input('Digite o seu email para realizar o login: '))
senha_tent = str(input('Digite a sua senha para realizar o login: '))
while email_tent != email_log and senha_tent != senha_log:
    email_tent = str(input('Algo está errado... Tente denovo\nDigite um email para realizar o login: '))
    senha_tent = str(input('Algo está errado... Tente denovo\nDigite uma senha para realizar o login: '))
print('Login realizado com sucesso, Bem vindo!')
